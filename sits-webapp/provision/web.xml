<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <servlet>
        <servlet-name>
            wrd
        </servlet-name>
        <servlet-class>
            com.compuware.uniface.urd.WRDServlet
        </servlet-class>
        <init-param>
            <param-name>RESOURCEDIR</param-name>
            <param-value>/opt/sitsvision</param-value>
        </init-param>
        <init-param>
            <param-name>MIDDLEWARE</param-name>
            <param-value>UV8:sits-app+13086|uroutpr|sits|wsvrsipr</param-value>
        </init-param>
        <init-param>
            <param-name>MAXFILEUPLOADSIZE</param-name>
            <param-value>28240</param-value>
        </init-param>
        <init-param>
            <param-name>ERRORDIR</param-name>
            <param-value>/opt/tomcat/logs</param-value>
        </init-param>
        <init-param>
            <param-name>USERUNPREFIX</param-name>
            <param-value>FALSE</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            wrd
        </servlet-name>
        <url-pattern>
            /wrd/*
        </url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>
            stutalk
        </servlet-name>
        <servlet-class>
            com.compuware.uniface.urd.SRDServlet
        </servlet-class>
        <init-param>
            <param-name>MIDDLEWARE</param-name>
            <param-value>UV8:sits-app+13086|uroutpr|sits|xsvrsipr</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>stutalk</servlet-name>
        <url-pattern>/stutalk/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
</web-app>
